@model MunchBunch.Models.Memoir

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Memoir Entry</h4>
<div class="rCard">
    <h3>@Model.RestaurantName</h3>
    <h4>@Model.RestaurantLocation</h4>
    <p>@Model.RestaurantAddress</p>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemoirId" />
            <div class="form-group">
                <input type="hidden" asp-for="RId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RestaurantName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RestaurantLocation" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RestaurantAddress" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AppUserId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Dish" class="control-label"></label>
                <input asp-for="Dish" class="form-control" />
                <span asp-validation-for="Dish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cocktail" class="control-label"></label>
                <input asp-for="Cocktail" class="form-control" />
                <span asp-validation-for="Cocktail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
