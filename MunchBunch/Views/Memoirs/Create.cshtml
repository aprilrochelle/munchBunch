@model MunchBunch.Models.MemoirViewModels.MemoirCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Memoir</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Memoir.RId" class="control-label"></label>
                <input disabled asp-for="Memoir.RId" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Memoir.RestaurantName" class="control-label"></label>
                <input disabled asp-for="Memoir.RestaurantName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Memoir.RestaurantLocation" class="control-label"></label>
                <input disabled asp-for="Memoir.RestaurantLocation" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Memoir.RestaurantAddress" class="control-label"></label>
                <input disabled asp-for="Memoir.RestaurantAddress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Memoir.Dish" class="control-label"></label>
                <input asp-for="Memoir.Dish" class="form-control" />
